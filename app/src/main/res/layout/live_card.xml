<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:textSize="90sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_horizontal|start|top"
            android:layout_gravity="center"
            android:text="%"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#7cffffff"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp" />

        <RelativeLayout
            android:id="@+id/rlbatpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            tools:ignore="Overdraw">

            <LinearLayout
                android:id="@+id/llmstats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvStatsTempTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textColor="#ff59bfff"
                        android:textStyle="bold"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tvStatsTempVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36.3Â° C"
                        android:textColor="#ffffffff"
                        android:textSize="15sp" />
                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvLeftStatTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffef84"
                        android:textStyle="bold"
                        android:text="Empty in"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tvLeftStatVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffffff"
                        android:text="1 Hour(s) 53 Minute(s)"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvPlugged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffd1ffa0"
                        android:textStyle="bold"
                        android:text="Unplugged"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/tvPluggedVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffffff"
                        android:text="8 Hour(s) 58 Minute(s) ago"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher" />
</RelativeLayout>